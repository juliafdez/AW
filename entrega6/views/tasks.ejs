<!DOCTYPE html>

<html>
    

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>Gestor de tareas</title>
    <meta charset="utf8">
    <link rel="stylesheet" href="css/index.css" media="screen">
    <link rel="stylesheet" href="css/index_print.css" media="print">
</head>

<body>
    <div class="cabecera">
        <img src="img/Logo.png" alt="Tareas" id="logo">
        <div class="user">
            <div class="userimg">
                <img src="img/img2315.png" class="avatar">
            </div>
            <div>
                <div class="username">usuario@ucm.es</div>
                <div class="connect_container">
                    <a class="action_button" href="">Desconectar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="tareas">
        <ul>

                <% taskList.forEach(p => { %>
                    <li>
                            <span>
                               <% if(p.done===true){ %>
                                    <span class="finalizada"><%= p.text %></span>
                                    
                                <%}else{%>
                                    <span class="enunciado"><%= p.text %></span>
                                    <% p.tags.forEach(i => { %>
                                        <span class="tag"><%= i%></span> 
                                    <% }) %>
                                    <form method="post" action="/finish">
                                        <input class="finalizada" value="Marcar finalizada" type="submit">
                                        <input type="hidden" name="id" value="<%= p.id %>">
                                    </form>
                                  <% } %>
                                   
                            </span>
                            
                    </li>              
                <% }); %>
